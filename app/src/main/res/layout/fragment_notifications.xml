<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="PROFILE"
          android:elevation="40dp"
          android:textSize="24sp"
          android:textColor="@color/black"
          android:fontFamily="@font/montserrat_bols"
          android:layout_centerHorizontal="true"
          >

      </TextView>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/linear_layout_profile">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_marginStart="40dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_baseline_person_24"
                    android:id="@+id/person"
                    >

                </de.hdodenhof.circleimageview.CircleImageView>



                <TextView
                    android:layout_toEndOf="@+id/person"
                    android:layout_marginStart="40dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/popiins"
                    android:text="Name of Person"
                    android:textColor="@android:color/black"
                    android:textSize="18sp">

                </TextView>




            </RelativeLayout>




            <Button
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:text="Portfolio"

                android:textColor="@android:color/white"
                android:fontFamily="@font/popiins"
                android:textSize="15sp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="140dp"
                android:id="@+id/intern_portfolio_button"
                style="@style/Widget.AppCompat.Button.Borderless">

            </Button>

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/intern_portfolio_button"
                android:layout_marginTop="50dp"
                android:background="#f4f4f4"
                android:layout_centerHorizontal="true"
                android:text="Current Job"
                android:fontFamily="@font/montserrat_bols"
                android:textAlignment="center"
                android:textSize="20sp"
                android:id="@+id/track_record">
            </TextView>



        </RelativeLayout>




</RelativeLayout>